{
  "name": "ts-boilerplate",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/djdmbrwsk/ts-boilerplate.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.22",
    "@types/node": "^12.12.6",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf ./build",
    "format": "prettier --write \"**/*.{md,js,json,ts,yaml,yml}\"",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "test": "jest --verbose --silent --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{md,js,json,ts,yaml,yml}": [
      "prettier --write",
      "git add"
    ],
    "{src,test}/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
